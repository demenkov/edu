// Переменные и базовые функции
x = 3; y = 4;
r = sqrt(x^2 + y^2); // 5
disp(r);
disp(sin(%pi/6)); // 0.5
disp(exp(1)); // e
disp(log(10)); // ln(10)
// Векторы и диапазоны
v = 1:5; // [1 2 3 4 5]
u = linspace(0, 1, 6); // 6 точек от 0 до 1
disp(v); disp(u);
// Элементные операции
a = [1 2 3]; b = [4 5 6];
disp(a + b);
disp(a .* b); // поэлементное умножение